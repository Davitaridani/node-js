<div class="container mt-4">
	<div class="row">
		<div class="col-md-8">
			<h3>Detail Contact</h3>
			<% if (!contact) { %>
				<div class="alert alert-danger" role="alert">
					<b> Data Contact Tidak Ada.</b> <br>
					<a href="/contact">&laquo; Kembali Ke Daftar Contact</a>
				</div>
			<% } else { %>
			<div class="card">
				<div class="card-body">
					<h5 class="card-title"><%= contact.nama %> </h5>
					<h5><%= contact.nohp %></h5>
					<p><%= contact.email %></p>
					<a href="/contact" class="btn btn-primary">kembali Ke Daftar Contact</a>
				</div>
			</div>
			<% } %> 
		</div>
	</div>
</div>